




local OpenTelemetry = require "opentelemetry.tracer"

-- Configure the tracer
local tracer = OpenTelemetry.tracer("nginx_tracer")

-- Function to start a span for a request
local function start_span(req)
    local span = tracer:start_span("http_request")
    span:set_attribute("http.method", req.method)
    span:set_attribute("http.url", req.url)
    -- Include more attributes as needed
    return span
end

-- Function to end a span for a request
local function end_span(span, req, resp)
    span:set_attribute("http.status_code", resp.status)
    -- Include more attributes as needed
    span:end_span()
end

-- Export the functions to be used in Nginx conf
return {
    start_span = function()
        local req = {
            method = ngx.var.request_method,
            url = ngx.var.scheme .. "://" .. ngx.var.host .. ":" .. ngx.var.server_port .. ngx.var.request_uri
        }
        local span = start_span(req)
        ngx.ctx.opentelemetry_span = span
    end,
    end_span = function()
        local span = ngx.ctx.opentelemetry_span
        if span then
            local resp = {
                status = ngx.status,
                -- body = ... -- Capture response body if necessary
            }
            end_span(span, ngx.req, resp)
        end
    end
}







local OpenTelemetry = require "opentelemetry.tracer"

-- Configure the tracer
local tracer = OpenTelemetry.tracer("nginx_tracer")

-- Function to start a span for a request
local function start_span(req)
    local span = tracer:start_span("http_request")
    span:set_attribute("http.method", req.method)
    span:set_attribute("http.url", req.url)
    -- Add more attributes based on available Nginx variables
    span:set_attribute("http.remote_ip", ngx.var.remote_addr)
    span:set_attribute("http.origin", ngx.var.http_origin)
    -- ... Add other relevant attributes
    return span
end

-- Function to end a span for a request
local function end_span(span, req, resp)
    span:set_attribute("http.status_code", resp.status)
    -- Note: Adjust response size capturing as per Nginx capability
    span:set_attribute("http.response_size", string.len(resp.body or ""))
    span:end_span()
end

-- Hook into OpenResty's request processing
ngx.req.start_span = function()
    local req = {
        method = ngx.var.request_method,
        url = ngx.var.scheme .. "://" .. ngx.var.host .. ":" .. ngx.var.server_port .. ngx.var.request_uri
    }
    local span = start_span(req)
    ngx.ctx.opentelemetry_span = span
end

ngx.req.end_span = function()
    local span = ngx.ctx.opentelemetry_span
    if span then
        local resp = {
            status = ngx.status,
            body = ngx.var.response_body  -- Adjust as needed
        }
        end_span(span, ngx.req, resp)
    end
end

